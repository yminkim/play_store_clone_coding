<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>게시글</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "맑은고딕";
        }

        h2 {
            margin-bottom: 20px;
        }

        body {
            background-color: rgb(224, 224, 224);
        }

        main {
            width: 50%;
            background-color: #fff;
            margin: 8% auto;
            display: flex;
            flex-direction: column;
        }

        .header-box {
            display: flex;
            border-top: 2px solid black;
            border-bottom: 1px solid rgb(165, 165, 165);

        }
        .header-box .title, .header-box .write-date {
            justify-content: center;
        }

        .header-box .title, .header-box .author, .header-box .write-date {
            display: flex;
            align-items: center;
            font-size: 15px;
            padding: 0.5em;
            font-weight: bold;
        }

        .header-box .title {
            width: 60%;
        }

        .header-box .author {
            width: 20%;
        }

        .header-box .write-date {
            width: 20%;
        }

        /* 포스트 */
        .post-area {
            display: flex;
            flex-direction: column;
        }

        .post-container {
            display: flex;
            border-bottom: 1px solid rgb(165, 165, 165);
        }

        .post-container div {
            padding: 2px 5px;
            font-size: 14px;
        }

        .post-count, .post-date {
            display: flex;
            align-items: center;
            justify-content: center;
            
        }

        .post-count {
            width: 10%;
        }

        .post-title {
            width: 50%;
        }

        .post-author, .post-date {
            width: 20%;
            
        }

        /* 하단 영역 */
        footer {
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
        }

        footer button {
            padding: 5px;
            border: 1px solid rgb(192, 192, 192);
            margin-right: 5px;
            margin-bottom: 5px;
        }

        .post-title a {
            text-decoration: none;
            color: black;
        }

        .hide-op {
            visibility: hidden;
        }

        .page-area a {
            text-decoration: none;
            padding: 4px;
            background-color: #fff;
            border: 1px solid black;
            font-size: 13px;
            color: black;
        }

        .page-area a:hover {
            background-color: cornflowerblue;
        }


        .login-info-area {
            position: absolute;
            right: 30px;
            top: 10px;
            display: flex;
        }

        .login-info {
            margin-right: 10px;
            display: flex;
        }

        .unknown {
            margin-left: 10px;
        }

        #imagePreview {
            width: 40px;
            height: 40px;
        }

        #imagePreview img {
            width: 100%;
            height: 100%;
        }

        .input-img-c {
            display: none;
        }
        
    </style>
</head>
<body>
    
    <main>
        <div class="login-info-area">
            <div class="login-info">접속:
                <label class="info-area-a" for="imageUpload">
                    <div id="imagePreview"><img src="/img/genre-1.png" alt=""></div>
                </label>
                <input type="file" id="imageUpload" accept=".gif, .jpg, .png" name="author_img" class="input-img-c" %>">
                    <%= (locals.user_info) ? user_info.nickname : "GUEST" %>
                </div>
            <% if(locals.user_info == null) { %>
                <a href="/signIn">로그인</a>
            <% } else { %>
                <form class="log-out-form" action="/logout" method="post">
                    <button class="user_btn logout_btn" type="submit">로그아웃</button>
                </form>

                <form class="unknown" action="/remove_user" method="post">
                    <button class="user_btn out_btn" type="submit">탈퇴</button>
                </form>
            <% } %>
            
            
        </div>
        <h2>게시글 리스트</h2>
        <div class="header-box">
            <div class="title">제목</div>
            <div class="author">작성자</div>
            <div class="write-date">작성일</div>
        </div>

        

        <div class="post-area">
            

            <% list.forEach(function (value, index) { %>
                <div class="post-container">
                    <div class="post-count"><%=value.id %></div>
                    <div class="post-title">
                        <a href="/read/<%=value.id%>"><%=value.title %></a>
                    </div>
                    <div class="post-author"><%=value.author %></div>
                    <div class="post-date"><%= post_time[index] %></div>
                </div>
            <% }); %>

                
        </div>
        
        <footer>
            <button class="hide-op">글쓰기</button>
            <div class="page-area">
                <a class="page-first" href="/list?pages=<%=1 %>"><<</a>
                <% for(let i =0; i < pages; i++) { %>
                    <a href="/list?pages=<%=i+1 %>"><%=i+1 %></a>
                <% }%>
                <a class="page-end" href="/list?pages=<%=pages %>">>></a>
            </div>
            <% if(locals.user_info == null) { %>
                <button class="hide-op">글쓰기</button>
            <% } else { %>
                <button onclick="location.href='/write'">글쓰기</button>
            <% } %>
        </footer>

    </main>

    <script
        src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
        crossorigin="anonymous"></script>
    <script>
        if($('.page-first').attr('href') == "/list?pages=2")
            console.log('asdf');

        $('.user_btn').click(function(){
            let rusult;

            if($(this).hasClass('logout_btn'))
                result = confirm('로그아웃 하시겠습니까');
            else 
                result = confirm('탈퇴 하시겠습니까');

            if(result == true) {
                return true;
            } else {
                return false;
            }
        });


        //프로필 사진 변경
        function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#imagePreview img').attr("src", e.target.result );
                }
            reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imageUpload").change(function() {
            readURL(this);
        });

        
        
        
    </script>
</body>
</html>